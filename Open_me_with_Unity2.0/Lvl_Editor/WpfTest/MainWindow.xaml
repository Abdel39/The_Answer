                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>

                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>

                    </Grid.RowDefinitions>
                </Grid>
            </Border>

            
                <Button Grid.Row="2" x:Name="SaveButton" Click="SaveButton_Click"
               
                        Content="Save And Quit" Margin="10,5,10,5" >

                    </Button>
           

        </Grid>
     

        </Grid>
    


</Window>
